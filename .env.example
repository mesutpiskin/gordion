# Stash/Bitbucket Server Configuration
STASH_URL=https://stash.yourcompany.com

# Authentication Method 1: Personal Access Token (Recommended)
# STASH_TOKEN=your_personal_access_token_here
# STASH_USERNAME=YOUR_USERNAME  # Optional, for display purposes

# Authentication Method 2: Username + Password (Legacy)
STASH_USERNAME=YOUR_USERNAME
STASH_PASSWORD=YOUR_PASSWORD

# Note: If STASH_TOKEN is set, it will be used instead of username/password

# AI Configuration
AI_PROVIDER=ollama  # ollama veya openai

# OpenAI Configuration (Sadece AI_PROVIDER=openai ise gerekli)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Ollama Configuration (Sadece AI_PROVIDER=ollama ise gerekli)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-coder:33b  # Ã–nerilen: deepseek-coder:33b, deepseek-coder:6.7b, codellama:13b

# Agent Configuration
CHECK_INTERVAL=300  # seconds (5 minutes)
DRY_RUN=false  # true ise sadece kontrol eder, approve etmez
RUN_MODE=continuous  # continuous veya once

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log
